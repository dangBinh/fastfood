                      i.fa.fa-star.active
                      i.fa.fa-star.active
                      i.fa.fa-star
                    li
                      span 20 ratings
                    li
              hr
              ul.list-unstyled.list-inline.deliver-time
                li
                  i.fa.fa-clock-o
                li {{merchant.time}} minutes (approx)
              hr
              ul.list-unstyled.list-inline.distance-charge
                li
                  i.fa.fa-location-arrow
                  | {{merchant.distance}} miles
