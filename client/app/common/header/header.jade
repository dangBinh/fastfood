#main-nav.container(ng-controller='headerCtrl')
   nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/#!')
            img(src='assets/images/logo.png', alt='img_alt')
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.header-cart
              a(href='#' popover-template="'app/common/header/cart.html'" popover-title="MY ORDER" popover-trigger="focus" popover-placement="bottom")
                img(src='assets/images/cart.png', alt='img_alt')
                .cart-count
                  {{countCartItem()}}
                // 0 item. Add item count when customer add item to basket
          ul.nav.navbar-nav.navbar-right.member-link(data-ng-controller='LoginCtrl')
            li
              a(href='#' data-ng-click='login("signinForm", "sm")')
                i.fa.fa-user
                |  Sign In
            li
              a(href='#')
                i.fa.fa-cutlery
                |  Restaurant Owner
            li
              a(href='#')
                i.fa.fa-weixin
                |  Live Chat
          ul.nav.navbar-nav.navbar-right.social-media
            li
              a(href='#')
                i.sk-facebook-circle
            li
              a(href='#')
                i.sk-twitter-circle
